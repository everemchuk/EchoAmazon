---
import { AstroFont } from "astro-font";

// Configures custom fonts for the application using astro-font
// This handles loading, preloading, and CSS variable generation for fonts
---

<!-- Font Loading Configuration using AstroFont -->
<AstroFont
	config={[
		{
			name: "Amazon Ember",
			googleFontsURL: "",
			preload: true,
			display: "swap",
			fallback: "sans-serif",
			cssVariable: "font-amazon-ember",
			src: [
				{
					style: "normal",
					weight: "400",
					path: "./source/shared/assets/fonts/Amazon Ember.ttf",
				},
				{
					style: "italic",
					weight: "400",
					path: "./source/shared/assets/fonts/Amazon Ember Italic.ttf",
				},
				{
					style: "normal",
					weight: "500",
					path: "./source/shared/assets/fonts/Amazon Ember Medium.ttf",
				},
				{
					style: "normal",
					weight: "700",
					path: "./source/shared/assets/fonts/Amazon Ember Bold.ttf",
				},
				{
					style: "normal",
					weight: "300",
					path: "./source/shared/assets/fonts/Amazon Ember Light.ttf",
				},
			],
		},
		{
			name: "Amazon Ember Display",
			googleFontsURL: "",
			preload: true,
			display: "swap",
			fallback: "sans-serif",
			cssVariable: "font-amazon-ember-display",
			src: [
				{
					style: "normal",
					weight: "400",
					path: "./source/shared/assets/fonts/Amazon Ember Display.otf",
				},
				{
					style: "normal",
					weight: "700",
					path: "./source/shared/assets/fonts/Amazon Ember Display Heavy.otf",
				},
			],
		},
	]}
/>
