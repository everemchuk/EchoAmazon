---
import App from "@app/App.astro";
import ProductCard from "@entities/ProductCard/ProductCard.tsx";
import pufferJacket from "@shared/assets/images/vecteezy_a-boy-s-puffer-jacket-with-a-hood_53110050.png";
import varsityJacket from "@shared/assets/images/vecteezy_generated-ai-yellow-varsity-jacket-isolated-on-transparent_48767912.png";
import trackJacket from "@shared/assets/images/vecteezy_sporty-black-track-jacket-with-zipper_43023976.png";

const products = [
	{
		id: "1",
		title: "Cashmere Jacket",
		brand: "Brioni",
		price: "$5657",
		rating: 4.5,
		image: pufferJacket.src,
	},
	{
		id: "2",
		title: "Varsity Jacket",
		brand: "Nike",
		price: "$120",
		rating: 3.5,
		image: varsityJacket.src,
	},
	{
		id: "3",
		title: "Track Jacket",
		brand: "Adidas",
		price: "$80",
		rating: 2.5,
		image: trackJacket.src,
	},
];

// Main store landing page
---

<App title="Store" activePage="store">
	<div class="page-header">
		<h1>Store</h1>
	</div>
	<div class="page-content">
		<div class="products-grid">
			{
				products.map((product) => (
					<ProductCard
						client:load
						id={product.id}
						title={product.title}
						brand={product.brand}
						price={product.price}
						image={product.image}
						rating={product.rating}
					/>
				))
			}
		</div>
	</div>
</App>

<style lang="sass">
	@use '@shared/styles/vars' as *

	.page-header
		margin-bottom: 2rem
		text-align: center

		h1
			font-family: $font-family-heading
			font-size: 2.5rem
			color: var(--text-color)

	.page-content
		display: flex
		justify-content: center
		padding-bottom: 4rem

	.products-grid
		display: grid
		grid-template-columns: repeat(1, 1fr)
		gap: 2rem
		width: 100%
		max-width: 1200px
		justify-items: center

		@include respond-to($tablet)
			grid-template-columns: repeat(2, 1fr)

		@include respond-to($desktop)
			grid-template-columns: repeat(3, 1fr)
</style>
