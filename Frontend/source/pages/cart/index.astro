---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="EchoAmazon - Cart" activePage="cart">
	<div class="page-header">
		<h1>Your Cart</h1>
	</div>
	<div class="page-content">
		<p>Your shopping cart is empty.</p>
	</div>
</BaseLayout>

<style lang="sass">
	@use '../../styles/vars' as *

	.page-header
		margin-bottom: 2rem

		h1
			font-family: $font-family-heading
			font-size: 2.5rem
			color: var(--text-color)

	.page-content
		color: var(--text-color)
</style>
