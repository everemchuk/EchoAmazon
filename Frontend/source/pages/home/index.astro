---

<App title="Home" activePage="home">
	<main class="home-page">
		<!-- Best Deals Section -->
		<section class="section best-deals">
			<Title client:load title="Best Deals">
				Discover incredible savings on our top-rated products
			</Title>
			<Slider client:load>
				{
					bestDealsProducts.map((product) => (
						<ProductCard
							client:visible
							id={product.id}
							image={product.image}
							title={product.title}
							brand={product.brand}
							price={product.price}
							rating={product.rating}
						/>
					))
				}
			</Slider>
		</section>

		<!-- Top Sellers Section -->
		<section class="section top-sellers">
			<Title client:load title="Top Sellers">
				Our most popular items loved by customers worldwide
			</Title>
			<Slider client:visible>
				{
					bestDealsProducts
						.slice()
						.reverse()
						.map((product) => (
							<ProductCard
								client:visible
								id={`top-${product.id}`}
								image={product.image}
								title={product.title}
								brand={product.brand}
								price={product.price}
								rating={product.rating}
							/>
						))
				}
			</Slider>
		</section>

		<!-- Latest News Section -->
		<section class="section latest-news">
			<Title client:load title="Latest News">
				Stay updated with the latest trends and announcements
			</Title>
			<Slider client:visible>
				{
					newsItems.map((item) => (
						<NewsCard
							client:visible
							image={item.image}
							title={item.title}
							description={item.description}
							link={item.link}
						/>
					))
				}
			</Slider>
		</section>
	</main>
</App>

