{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "source/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "source/app/*"
      ],
      "@pages/*": [
        "source/pages/*"
      ],
      "@widgets/*": [
        "source/widgets/*"
      ],
      "@features/*": [
        "source/features/*"
      ],
      "@entities/*": [
        "source/entities/*"
      ],
      "@shared/*": [
        "source/shared/*"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "exclude": [
    "build"
  ]
}